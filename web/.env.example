# Localtrip Web Frontend Environment Variables

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3030
NEXT_PUBLIC_API_VERSION=v1

# Application Configuration
NEXT_PUBLIC_APP_NAME=LocalTrip
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_PLACES_KEY=your-google-places-api-key
NEXT_PUBLIC_WEATHER_API_KEY=your-weather-api-key

# Analytics & Tracking (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-google-analytics-id
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Social Media Integration (optional)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_TWITTER_HANDLE=@localtrip

# Image & Media Configuration
NEXT_PUBLIC_IMAGE_DOMAIN=localhost:3030
NEXT_PUBLIC_MAX_IMAGE_SIZE=5242880
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Map Configuration
NEXT_PUBLIC_DEFAULT_LAT=-6.2088
NEXT_PUBLIC_DEFAULT_LNG=106.8456
NEXT_PUBLIC_MAP_ZOOM=13

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_CHAT=false

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_THEME_COLOR=#1976d2
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff
